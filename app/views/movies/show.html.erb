

  <%= @movie.title %>
  <%= @movie.genre %>
  <%= @movie.creation_year %>
  <% if @movie.actors.empty? %>
    <%= 'Add an actor' %>
      <%= form_with url: "/movies/#{@movie.id}", method: :post, local: true do |f| %>
        <%= f.label :name %>
        <%= f.text_field :name %>
        <%= submit_tag 'submit' %>
      <% end %>
      

    <% else %>
      <% @movie.actors.each do |actor| %>
        <%= actor.name %>
      <% end %>
  <% end %>
